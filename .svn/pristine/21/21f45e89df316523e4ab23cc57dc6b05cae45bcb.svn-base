
						/****** join ******/
body {
	display:block;
	width:100%;
}


h3.bottom_bar {				/* content 상단 바  */
	display:block;
	width:100%;
	padding-top:20px;
	margin-left:20px;
	padding-bottom:10px;
	margin-bottom:15px;
}
				
div.content {				/* content 영역 설정 */
	display:block;
	width:1200px;
	margin-top:20px;
	margin-bottom:20px;
	margin-right:auto;
	margin-left:auto;
	background-color:white;
	
} 
div.okCancel {				/* 모든 페이지 확인(회원가입, 로그인 등), 취소 버튼(기본 설정) */
	display:inline-block;
	width:100%;
	text-align:center;
}


/****************************** 회원가입 ***********************/

div.join {					/* 회원가입 이용약관 */
	display:block;
	margin-left:220px;
}

span.joinUser_ok, span.joinAdmin_ok { 	/* 일반, 사업자 회원가입 페이지 이동 버튼 */
	display:inline-block;
	width:160px;
	border-radius:5px;
	padding:15px 20px;
	color:white;
	font-weight:bold;
	background-color:#181818;
	text-align:center;
	margin-left:140px;
}

span.joinAdmin_join, span.joinAdmin_cancel { /* 회원가입, 취소 버튼 */
	display:inline-block;
	width:150px;
	border-radius:5px;
	padding:15px 20px;
	color:white;
	font-weight:bold;
	background-color:#181818;
	text-align:center;
}

table.adminjoin, table.userjoin, table.userselect {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	display:block;
	width:400px;
	margin-left:auto;
	margin-right:auto;
	border:1px solid #e2e2e2;
}

table.adminjoin td, table.userjoin td, table.userselect td {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	padding:10px;
	width:300px;
	border-bottom:1px solid #e2e2e2;
	border-top:1px solid #e2e2e2;
}

table.adminjoin td.ftd, table.userjoin td.ftd, table.userselect td.ftd {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	width:140px;
	background-color:#e2e2e2;
}
	
table.adminjoin td select, table.userjoin td select, table.userselect td select {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	width:120px;
}

/****************************** ID/PW 찾기 ***********************/


