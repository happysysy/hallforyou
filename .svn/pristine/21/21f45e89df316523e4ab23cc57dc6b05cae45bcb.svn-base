	display:inline-block;
	width:100%;
	height:525px;
	padding-top:75px;
}

div.help table.help tr td {
	text-align:center;
	width:600px;
	border-:1px solid #345345;
}

div.help a span.help_idpw {
	display:inline-block;
	width:150px;
	height:150px;
	border-radius:5px;
	padding:45px 30px;
	color:white;
	font-weight:bold;
	background-color:#789789;
	text-align:center;
	font-size:20px;
}

table.help {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	display:block;
	width:400px;
	margin-left:auto;
	margin-right:auto;
}

table.help td {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	padding:10px;
	width:300px;
}

table.help td.ftd {	/* 사업자 회원가입, 일반 회원가입, 추가 정보 */
	width:140px;
	background-color:#e2e2e2;
}

div.content h4.help{
	display:block;
	width:100%;
	text-align:center; 
	font-weight:bold;
	margin-top:50px;
	margin-bottom:70px;
	color:red;
}